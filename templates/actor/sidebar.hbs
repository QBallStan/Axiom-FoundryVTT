<div
  class="axiom-sidebar"
  data-application-part="sidebar"
  data-application-tabs="sidebar"
>
  <!-- PORTRAIT -->
  <div class="sidebar-portrait">
    <img
      src="{{actor.img}}"
      data-edit="img"
      data-action="editImage"
      title="{{actor.name}}"
    />
  </div>

  <!-- NAME -->
  <div class="sidebar-name">
    <input id="character-name" type="text" name="name" value="{{actor.name}}" />
  </div>

  <!-- STATS -->
  <div class="sidebar-stats">
    <div class="tracker-wrapper">
      <!-- HEALTH -->
      <div class="tracker-block">
        <span class="tracker-label">{{localize "AXIOM.Health"}}</span>

        <div class="tracker-controls">
          <button
            type="button"
            class="tracker-btn"
            data-action="healthDecrease"
            data-target="system.trackers.health.value"
          >
            −
          </button>

          <input
            type="number"
            name="system.trackers.health.value"
            value="{{system.trackers.health.value}}"
          />

          <span class="tracker-max">/{{system.trackers.health.max}}</span>

          <button
            type="button"
            class="tracker-btn"
            data-action="healthIncrease"
            data-target="system.trackers.health.value"
          >
            +
          </button>
        </div>
      </div>

      <!-- STAMINA -->
      <div class="tracker-block">
        <span class="tracker-label">{{localize "AXIOM.Stamina"}}</span>

        <div class="tracker-controls">
          <button
            type="button"
            class="tracker-btn"
            data-action="staminaDecrease"
            data-target="system.trackers.stamina.value"
          >
            −
          </button>

          <input
            type="number"
            name="system.trackers.stamina.value"
            value="{{system.trackers.stamina.value}}"
            min="0"
          />

          <span class="tracker-max">/{{system.trackers.stamina.max}}</span>

          <button
            type="button"
            class="tracker-btn"
            data-action="staminaIncrease"
            data-target="system.trackers.stamina.value"
          >
            +
          </button>
        </div>
      </div>
    </div>

    <!-- STATS GRID (unchanged) -->
    <div class="stats-grid">
      <!-- Row 1: Icons -->
      <i class="fas fa-shield-alt" title="{{localize 'AXIOM.Toughness'}}"></i>
      <i
        class="fas fa-user-shield"
        title="
{{localize 'AXIOM.Head'}}: {{system.trackers.armor.head}}
{{localize 'AXIOM.Chest'}}: {{system.trackers.armor.chest}}
{{localize 'AXIOM.Arms'}}: {{system.trackers.armor.arms}}
{{localize 'AXIOM.Legs'}}: {{system.trackers.armor.legs}}
"
      ></i>
      <i class="fas fa-shoe-prints" title="{{localize 'AXIOM.Movement'}}"></i>
      <i class="fas fa-skull" title="{{localize 'AXIOM.Corruption'}}"></i>

      <!-- Row 2: Values -->
      <span>{{system.trackers.toughness.value}}</span>
      <span>{{system.trackers.armor.chest}}</span>
      <span>{{system.trackers.movement.value}}</span>
      <span
        >{{system.trackers.corruption.value}}/{{system.trackers.corruption.max}}</span
      >
    </div>

    <!-- FOCUS & ACTION POINTS -->
    <div class="sidebar-resource-block">
      <div class="resource-row">
        <span class="resource-label">{{localize "AXIOM.FocusPoints"}}</span>
        <div class="resource-icons focus-icons" data-tracker="focus">
          <!-- Icons injected by JS -->
        </div>
      </div>

      <div class="resource-row">
        <span class="resource-label">{{localize "AXIOM.ActionPoints"}}</span>
        <div class="resource-icons action-icons" data-tracker="actionPoints">
          <!-- Icons injected by JS -->
        </div>
      </div>
    </div>

    <!-- ATTRIBUTES -->
    <div class="attributes-grid">
      <div class="attribute">
        <span>{{localize "AXIOM.STR"}}</span>
        <input
          type="number"
          name="system.attributes.strength.value"
          value="{{system.attributes.strength.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.AGI"}}</span>
        <input
          type="number"
          name="system.attributes.agility.value"
          value="{{system.attributes.agility.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.FOR"}}</span>
        <input
          type="number"
          name="system.attributes.fortitude.value"
          value="{{system.attributes.fortitude.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.INS"}}</span>
        <input
          type="number"
          name="system.attributes.instinct.value"
          value="{{system.attributes.instinct.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.LOG"}}</span>
        <input
          type="number"
          name="system.attributes.logic.value"
          value="{{system.attributes.logic.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.RES"}}</span>
        <input
          type="number"
          name="system.attributes.resolve.value"
          value="{{system.attributes.resolve.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.CHA"}}</span>
        <input
          type="number"
          name="system.attributes.charisma.value"
          value="{{system.attributes.charisma.value}}"
        />
      </div>

      <div class="attribute">
        <span>{{localize "AXIOM.POW"}}</span>
        <input
          type="number"
          name="system.attributes.power.value"
          value="{{system.attributes.power.value}}"
        />
      </div>
    </div>
  </div>

  <nav class="sidebar-tabs tabs">
    {{#each tabs.sidebar}}
    <a
      data-action="tab"
      data-group="{{this.group}}"
      data-tab="{{this.id}}"
      class="{{this.cssClass}}"
    >
      <span>{{localize this.label}}</span>
    </a>
    {{/each}}
  </nav>

  <section data-application-part="attribute-tests"></section>
  <section data-application-part="physical-limits"></section>
</div>
